{
  "manifest_version": 3,
  "name": "Do I Have This Movie?",
  "version": "1.0",
  "description": "Check if a movie on Netflix or IMDb is in your Jellyfin library.",
  "homepage": "https://github.com/kmmuntasir/do-i-have-this-movie",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.imdb.com/*",
        "*://*.letterboxd.com/*",
        "*://*.yts.bz/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}